{
  "name": "npm-ts-workspace",
  "version": "1.0.0",
  "description": "npm typescript workspace",
  "private": true,
  "main": "index.js",
  "scripts": {
    "format": "npx prettier . --write",
    "format:check": "npx prettier . --check",
    "prepare": "husky"
  },
  "author": "vanducld@gmail.com",
  "license": "ISC",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
